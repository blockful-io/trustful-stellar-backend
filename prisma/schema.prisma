generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Community {
  contractAddress String   @id
  factoryAddress  String
  name            String
  description     String
  creatorAddress  String
  isHidden        Boolean
  blocktimestamp  DateTime
  totalBadges     Int
  lastIndexedAt   DateTime @updatedAt

  // Relations
  members  CommunityMember[]
  managers CommunityManager[]
  badges   Badge[]
}

model User {
  userAddress String @id

  // Relations
  communities CommunityMember[]
}

model CommunityMember {
  id              Int      @id @default(autoincrement())
  userAddress     String
  isManager       Boolean  @default(false)
  isCreator       Boolean  @default(false)
  contractAddress String
  lastIndexedAt   DateTime @updatedAt

  // Relations
  community Community @relation(fields: [contractAddress], references: [contractAddress])
  user      User      @relation(fields: [userAddress], references: [userAddress])
}

model CommunityManager {
  id              Int    @id @default(autoincrement())
  managerAddress  String
  contractAddress String

  // Relations
  community Community @relation(fields: [contractAddress], references: [contractAddress])
}

model Badge {
  issuer          String
  contractAddress String
  name            String
  score           Int
  type            String

  // Relations
  community       Community @relation(fields: [contractAddress], references: [contractAddress])

  @@id([issuer, contractAddress])
}
